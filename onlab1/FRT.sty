%Custom headers and footers
\newcommand{\titlehead}{%
	\begin{tikzpicture}[remember picture, overlay]
		\filldraw[draw=FRTred, fill=FRTred] (current page.north east)--([yshift=-19.7mm]current page.north east)--([yshift=-37.8mm]current page.north west)--(current page.north west) -- cycle;
		\filldraw[draw=black, fill=black] (current page.north west)--([yshift=-19.7mm]current page.north west)--([yshift=-37.8mm]current page.north east)--(current page.north east) -- cycle;		
	\end{tikzpicture}
}%
\newcommand{\titlefoot}{%
	\begin{tikzpicture}[remember picture, overlay]
		\filldraw[draw=FRTred, fill=FRTred] (current page.south west)--([yshift=19.7mm]current page.south west)--([yshift=37.8mm]current page.south east)--(current page.south east) -- cycle;
		\filldraw[draw=black, fill=black] (current page.south east)--([yshift=19.7mm]current page.south east)--([yshift=37.8mm]current page.south west)--(current page.south west) -- cycle;		
	\end{tikzpicture}
}%
\newcommand{\FRThead}{
	\begin{tikzpicture}[remember picture, overlay]
		\fill [color=FRTred] (current page.north west) rectangle ([yshift=-11.38mm]current page.north east);
		\fill [color=black] (current page.north west) rectangle ([yshift=-9.6mm]current page.north east);
	\end{tikzpicture}
}
\newcommand{\FRTfoot}{
	\begin{tikzpicture}[remember picture, overlay]
		\fill [color=FRTred] (current page.south west) rectangle ([yshift=18.81mm]current page.south east);
		\fill [color=black] (current page.south west) rectangle ([yshift=16.49mm]current page.south east);
		\path([yshift=7.655mm,xshift=47.005mm]current page.south west) node {\includegraphics[height=12.11mm]{FRT_logo_white_text_side_line.png}};
	\end{tikzpicture}
}





